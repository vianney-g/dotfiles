# i3 config file (v4)
#
# Please see https://i3wm.org/docs/userguide.html for a complete reference!

exec --no-startup-id "xrandr --output DP-3 --auto"
exec --no-startup-id "xrandr --output eDP-1 --auto"

# Screenshot
exec --no-startup-id flameshot

# activate numlock
exec --no-startup-id xdotool key --clearmodifiers Num_Lock
exec "setxkbmap fr -variant bepo"

# Readable modifier key names.
set $meta Mod4
set $alt Mod1
set $hyper Mod4+Mod1+control+shift
set $meh Mod1+control+shift

# Font for window titles. Will also be used by the bar unless a different font
# is used in the bar {} block below.
# font pango:monospace 8
font pango:JetBrainsMono Nerd Font 9
default_border pixel 1

# This font is widely installed, provides lots of unicode glyphs, right-to-left
# text rendering and scalability on retina/hidpi displays (thanks to pango).
#font pango:DejaVu Sans Mono 8

# Start XDG autostart .desktop files using dex. See also
# https://wiki.archlinux.org/index.php/XDG_Autostart
exec --no-startup-id dex --autostart --environment i3

focus_on_window_activation focus
for_window [urgent="latest"] focus

# The combination of xss-lock, nm-applet and pactl is a popular choice, so
# they are included here as an example. Modify as you see fit.

# xss-lock grabs a logind suspend inhibit lock and will use i3lock to lock the
# screen before suspend. Use loginctl lock-session to lock your screen.
exec --no-startup-id xss-lock --transfer-sleep-lock -- i3lock --nofork
bindsym $meta+x mode "lock"

# NetworkManager is the most popular way to manage wireless networks on Linux,
# and nm-applet is a desktop environment-independent system tray GUI for it.
exec --no-startup-id nm-applet

# Use pactl to adjust volume in PulseAudio.
set $refresh_i3status killall -SIGUSR1 i3status
bindsym XF86AudioRaiseVolume exec --no-startup-id pactl set-sink-volume @DEFAULT_SINK@ +10% && $refresh_i3status
bindsym XF86AudioLowerVolume exec --no-startup-id pactl set-sink-volume @DEFAULT_SINK@ -10% && $refresh_i3status
bindsym XF86AudioMute exec --no-startup-id pactl set-sink-mute @DEFAULT_SINK@ toggle && $refresh_i3status
bindsym XF86AudioMicMute exec --no-startup-id pactl set-source-mute @DEFAULT_SOURCE@ toggle && $refresh_i3status

# Adjust brightness
bindsym XF86MonBrightnessDown exec --no-startup-id brightnessctl --min-val=2 -q set 3%-
bindsym XF86MonBrightnessUp exec --no-startup-id brightnessctl -q set 3%+

# Use Mouse+$meta to drag floating windows to their wanted position
floating_modifier $meta

# start a terminal
# bindsym $meta+Return exec i3-sensible-terminal
bindsym $meta+Return exec wezterm

# spawn snippets selector
bindsym $hyper+comma exec --no-startup-id snippets

# take a screenshot
bindsym $hyper+s exec --no-startup-id flameshot gui

# kill focused window
bindsym $hyper+Escape kill

# start clipboard manager
# bindsym $hyper+c exec --no-startup-id diodon
bindsym $hyper+c exec --no-startup-id "rofi-gpaste"

# start dmenu (a program launcher)
# bindsym $meta+d exec --no-startup-id dmenu_run

# A more modern dmenu replacement is rofi:
bindsym $meta+d exec --no-startup-id "rofi -show run"
# switch active window with rofi
bindsym $meta+l exec --no-startup-id "rofi -show window"
# There also is i3-dmenu-desktop which only displays applications shipping a
# .desktop file. It is a wrapper around dmenu, so you need that installed.
# bindcode $meta+40 exec --no-startup-id i3-dmenu-desktop

# change focus
bindsym $meta+u focus left
bindsym $meta+i focus down
bindsym $meta+p focus up
bindsym $meta+e focus right

# move focused window
bindsym $meta+Shift+u move left
bindsym $meta+Shift+i move down
bindsym $meta+Shift+p move up
bindsym $meta+Shift+e move right

# split in horizontal orientation
bindsym $meta+h split h

# split in vertical orientation
bindsym $meta+v split v

# enter fullscreen mode for the focused container
bindsym $meta+y fullscreen toggle

# change container layout (stacked, tabbed, toggle split)
bindsym $meta+s layout stacking
bindsym $meta+z layout tabbed
bindsym $meta+t layout toggle split

# toggle tiling / floating
bindsym $meta+f floating toggle

# change focus between tiling / floating windows
bindsym $meta+Shift+f focus mode_toggle

# focus the parent container
bindsym $meta+q focus parent

# focus the child container
#bindsym $meta+d focus child

# switch to workspace
bindsym $hyper+e workspace next
bindsym $hyper+p workspace next
bindsym $hyper+i workspace prev
bindsym $hyper+u workspace prev
bindsym $hyper+n exec i3-msg workspace `i3-input | grep command | cut -c 11-30`

# move focused container to workspace
bindsym $meh+t move container to workspace next workspace next
bindsym $meh+s move container to workspace prev workspace prev

# reload the configuration file
bindsym $meta+Shift+j reload
# restart i3 inplace (preserves your layout/session, can be used to upgrade i3)
bindsym $meta+Shift+z restart
# exit i3 (logs you out of your X session)
bindsym $meta+Shift+x exec "i3-nagbar -t warning -m 'You pressed the exit shortcut. Do you really want to exit i3? This will end your X session.' -B 'Yes, exit i3' 'i3-msg exit'"

# resize window (you can also use the mouse for that)
mode "resize" {
        # These bindings trigger as soon as you enter the resize mode

        # Pressing left will shrink the window’s width.
        # Pressing right will grow the window’s width.
        # Pressing up will shrink the window’s height.
        # Pressing down will grow the window’s height.
        bindsym c resize shrink width 10 px or 10 ppt
        bindsym t resize grow height 10 px or 10 ppt
        bindsym s resize shrink height 10 px or 10 ppt
        bindsym r resize grow width 10 px or 10 ppt

        # same bindings, but for the arrow keys
        bindsym Left resize shrink width 10 px or 10 ppt
        bindsym Down resize grow height 10 px or 10 ppt
        bindsym Up resize shrink height 10 px or 10 ppt
        bindsym Right resize grow width 10 px or 10 ppt

        # back to normal: Enter or Escape or $meta+r
        bindsym Return mode "default"
        bindsym Escape mode "default"
        bindsym $meta+r mode "default"
}

bindsym $meta+r mode "resize"

mode "lock" {
    bindsym l exec i3lock --ignore-empty-password --tiling --image='/home/vianney/Images/Papiers_peints/1270960.png' 2>/dev/null, mode "default"
    # just force suspend. i3lock will be called automatically via lock.sh 
    bindsym s exec --no-startup-id sleep 1 && xset dpms force suspend , mode "default"
}

# Start i3bar to display a workspace bar (plus the system information i3status
# finds out, if available)
bar {
        status_command i3status
        position top
        separator_symbol " "
        tray_output primary
        tray_padding 3px
        workspace_min_width 75
        colors {
                background #1d1f21
                focused_workspace #f0c674 #f0c674 #1d1f21
                inactive_workspace #282a2e #282a2e #f0c674 
                urgent_workspace #cc6666 #cc6666 #1d1f21
        }
}
