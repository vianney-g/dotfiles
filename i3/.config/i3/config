# Set keyboard layout to French Bépo or French Azerty
# bepo must be set as variant first to avoid a bug with the keymap
# otherwise, shortcuts with the $meta key won't work
exec "setxkbmap -option 'grp:ctrls_toggle' -layout fr,fr -variant 'bepo,azerty'"


# Readable modifier key names.
set $meta Mod4
set $alt Mod1
set $hyper Mod4+Mod1+control+shift
set $meh Mod1+control+shift

# Reset xrandr settings
