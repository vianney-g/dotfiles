exec --no-startup-id "xrandr --output DP-3 --auto"
exec --no-startup-id "xrandr --output eDP-1 --auto"

# Screenshot
exec --no-startup-id flameshot

# activate numlock
exec --no-startup-id xdotool key --clearmodifiers Num_Lock

# background image (needs feh)
exec_always feh --bg-scale ~/Images/Papiers_peints/wallpaper3.jpg

# Set keyboard layout to French Bépo or French Azerty
# bepo must be set as variant first to avoid a bug with the keymap
# otherwise, shortcuts with the $meta key won't work
exec "setxkbmap -option 'grp:lctrl_rctrl_toggle' -layout fr,fr -variant 'bepo,azerty'"
# Mouse scrolling direction natural
exec --no-startup-id synclient VertScrollDelta=-111


# Readable modifier key names.
set $meta Mod4
set $alt Mod1
set $hyper Mod4+Mod1+control+shift
set $meh Mod1+control+shift

# Reset xrandr settings
bindsym $meta+Shift+y exec --no-startup-id xrandr --output eDP-1 --auto


# Start XDG autostart .desktop files using dex. See also
# https://wiki.archlinux.org/index.php/XDG_Autostart
exec --no-startup-id dex --autostart --environment i3

focus_on_window_activation focus
for_window [urgent="latest"] focus

# The combination of xss-lock, nm-applet and pactl is a popular choice, so
# they are included here as an example. Modify as you see fit.


# NetworkManager is the most popular way to manage wireless networks on Linux,
# and nm-applet is a desktop environment-independent system tray GUI for it.
exec --no-startup-id nm-applet


# Adjust brightness
bindsym XF86MonBrightnessDown exec --no-startup-id brightnessctl --min-val=2 -q set 3%-
bindsym XF86MonBrightnessUp exec --no-startup-id brightnessctl -q set 3%+

# Adjust volume
bindsym XF86AudioRaiseVolume exec --no-startup-id amixer -q set Master 2%+
bindsym XF86AudioLowerVolume exec --no-startup-id amixer -q set Master 2%-
bindsym XF86AudioMute exec --no-startup-id amixer -q set Master toggle

# toggle playerctl
bindsym XF86AudioPlay exec --no-startup-id playerctl play-pause

# Use Mouse+$meta to drag floating windows to their wanted position
floating_modifier $meta

# start a terminal
# bindsym $meta+Return exec i3-sensible-terminal
bindsym $meta+Return exec --no-startup-id wezterm

# spawn snippets selector
bindsym $meta+comma exec --no-startup-id snippets

# take a screenshot
bindsym Print exec --no-startup-id flameshot gui

# kill focused window
bindsym $meta+period kill

# start clipboard manager
# bindsym $hyper+c exec --no-startup-id diodon
bindsym $meta+c exec --no-startup-id "rofi-gpaste"

# start dmenu (a program launcher)
# bindsym $meta+d exec --no-startup-id dmenu_run

# A more modern dmenu replacement is rofi:
bindsym $meta+space exec --no-startup-id "rofi -show run"
# switch active window with rofi
bindsym $meta+Shift+space exec --no-startup-id "rofi -show window"
# There also is i3-dmenu-desktop which only displays applications shipping a
# .desktop file. It is a wrapper around dmenu, so you need that installed.
# bindcode $meta+40 exec --no-startup-id i3-dmenu-desktop

# name some task related workspaces
set $Workspaces " Web  Code  Jeu  Privé  Social  Musique  Autre  Doc  Photo  Vidéo  Mail  Lecture  Home Aide  Kanban Légitchad  Tâches  Log  Note  Projet  Recherche  Shop  MàJ  Urgent  Visio  Vim"
# change focus
bindsym $meta+Left focus left
bindsym $meta+Down focus down
bindsym $meta+Up focus up
bindsym $meta+Right focus right

# move focused window
bindsym $meta+Shift+Left move left
bindsym $meta+Shift+Down move down
bindsym $meta+Shift+Up move up
bindsym $meta+Shift+Right move right

# move focused container to workspace
bindsym $meh+u move container to workspace prev workspace prev
bindsym $meh+i move container to workspace prev workspace prev
bindsym $meh+p move container to workspace next workspace next
bindsym $meh+e move container to workspace next workspace next

# move focused window to scratchpad
bindsym $meta+Shift+e move scratchpad

#display scratchpad
bindsym $meta+e scratchpad show

# toggle split in vertical/horizontal orientation
bindsym $meta+v layout toggle split
bindsym $meta+h split horizontal
bindsym $meta+g split vertical

# enter fullscreen mode for the focused container
bindsym $meta+y fullscreen toggle

# change container layout (stacked, tabbed, toggle split)
bindsym $meta+s layout stacking
bindsym $meta+z layout tabbed
bindsym $meta+t layout toggle split

# toggle tiling / floating
bindsym $meta+f floating toggle

# change focus between tiling / floating windows
bindsym $meta+k focus mode_toggle

# focus the parent container
bindsym $meta+q focus parent

# focus the child container
#bindsym $meta+d focus child

# switch to workspace
bindsym $meta+i workspace prev
bindsym $meta+p workspace next
# or, using the mouse wheel:
bindsym --whole-window $meta+Shift+button4 workspace prev
bindsym --whole-window $meta+Shift+button5 workspace next

# Dynamic workspace
bindsym $meta+Shift+n exec i3-msg workspace `i3-input | grep command | cut -c 11-30`

bindsym $meta+l exec i3-msg workspace `echo "$Workspaces" | rofi -sep ' ' -p "Switch to workspace" -i -dmenu`
bindsym $meta+d exec i3-msg move container to workspace `echo "$Workspaces" | rofi -sep ' ' -p "Move to workspace" -dmenu  -i`
# reload the configuration file
bindsym $meta+Shift+j reload
# restart i3 inplace (preserves your layout/session, can be used to upgrade i3)
bindsym $meta+Shift+z restart

# resize window (you can also use the mouse for that)
set $resize vim keys to shrink/grow/height/width
bindsym $meta+r mode "$resize"
mode "$resize" {
        # These bindings trigger as soon as you enter the resize mode

        # Pressing left will shrink the window’s width.
        # Pressing right will grow the window’s width.
        # Pressing up will shrink the window’s height.
        # Pressing down will grow the window’s height.
        bindsym c resize shrink width 10 px or 10 ppt
        bindsym t resize grow height 10 px or 10 ppt
        bindsym s resize shrink height 10 px or 10 ppt
        bindsym r resize grow width 10 px or 10 ppt

        # same bindings, but for the arrow keys
        bindsym Left resize shrink width 10 px or 10 ppt
        bindsym Down resize grow height 10 px or 10 ppt
        bindsym Up resize shrink height 10 px or 10 ppt
        bindsym Right resize grow width 10 px or 10 ppt

        # back to normal: Enter or Escape or $meta+r
        bindsym Return mode "default"
        bindsym Escape mode "default"
        bindsym $meta+r mode "default"
}


# xss-lock grabs a logind suspend inhibit lock and will use i3lock to lock the
# screen before suspend. Use loginctl lock-session to lock your screen.
exec --no-startup-id xss-lock --transfer-sleep-lock -- i3lock --nofork

set $session_mode S suspend | X lock | Q exit | 󱊷 cancel
bindsym $meta+x mode "$session_mode"
mode "$session_mode" {
    # bindsym l exec i3lock --ignore-empty-password --tiling --image='/home/vianney/Images/Papiers_peints/1270960.png' 2>/dev/null, mode "default"
    bindsym x exec betterlockscreen --lock dim --off 120 -- --keylayout=0, mode "default"

    # just force suspend. i3lock will be called automatically via lock.sh 
    bindsym s exec --no-startup-id sleep 1 && xset dpms force suspend , mode "default"
    # exit i3 (logs you out of your X session)
    bindsym q exit, mode "default"

    bindsym Escape mode "default"
    bindsym Return mode "default"
}

