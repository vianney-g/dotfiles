# switch to workspace
bindsym $meta+Shift+u workspace prev
bindsym $meta+Shift+i workspace prev
bindsym $meta+Shift+p workspace next
bindsym $meta+Shift+e workspace next
# or, using the mouse wheel:
bindsym --whole-window $meta+Shift+button4 workspace prev
bindsym --whole-window $meta+Shift+button5 workspace next

# Dynamic workspace
bindsym $meta+Shift+n exec i3-msg workspace `i3-input | grep command | cut -c 11-30`

bindsym $meta+Shift+f workspace $Web
bindsym $meta+Shift+c workspace $Code
bindsym $meta+Shift+g workspace $Game
bindsym $meta+Shift+x workspace $Private
bindsym $meta+Shift+s workspace $Social
bindsym $meta+Shift+m workspace $Music
bindsym $meta+Shift+l exec i3-msg workspace `echo "$Web\n$Code\n$Game\n$Private\n$Social\n$Music\n$Misc\n$Doc\n$Photo\n$Video\n$Mail\n$Read\n$Home\n$Help\n$Kanban\n$Legitchad\n$Task\n$Log\n$Note\n$Project\n$Search\n$Shop\n$Update\n$Urgent\n$Videoconf\n$Vim" | rofi -dmenu -p "Switch to workspace" -i`
# reload the configuration file
bindsym $meta+Shift+j reload
# restart i3 inplace (preserves your layout/session, can be used to upgrade i3)
bindsym $meta+Shift+z restart

# resize window (you can also use the mouse for that)
mode "resize" {
        # These bindings trigger as soon as you enter the resize mode

        # Pressing left will shrink the window’s width.
        # Pressing right will grow the window’s width.
        # Pressing up will shrink the window’s height.
        # Pressing down will grow the window’s height.
        bindsym c resize shrink width 10 px or 10 ppt
        bindsym t resize grow height 10 px or 10 ppt
        bindsym s resize shrink height 10 px or 10 ppt
        bindsym r resize grow width 10 px or 10 ppt

        # same bindings, but for the arrow keys
        bindsym Left resize shrink width 10 px or 10 ppt
        bindsym Down resize grow height 10 px or 10 ppt
        bindsym Up resize shrink height 10 px or 10 ppt
        bindsym Right resize grow width 10 px or 10 ppt

        # back to normal: Enter or Escape or $meta+r
        bindsym Return mode "default"
        bindsym Escape mode "default"
        bindsym $meta+r mode "default"
}

bindsym $meta+r mode "resize"

# xss-lock grabs a logind suspend inhibit lock and will use i3lock to lock the
# screen before suspend. Use loginctl lock-session to lock your screen.
exec --no-startup-id xss-lock --transfer-sleep-lock -- i3lock --nofork

set $session_mode 🆂 suspend | 🅻 lock | 🆀 exit | 󱊷 cancel
bindsym $meta+x mode "$session_mode"
mode "$session_mode" {
    # bindsym l exec i3lock --ignore-empty-password --tiling --image='/home/vianney/Images/Papiers_peints/1270960.png' 2>/dev/null, mode "default"
    bindsym l exec betterlockscreen --lock dim --off 120 -- --keylayout=0, mode "default"

    # just force suspend. i3lock will be called automatically via lock.sh 
    bindsym s exec --no-startup-id sleep 1 && xset dpms force suspend , mode "default"
    # exit i3 (logs you out of your X session)
    bindsym q exit, mode "default"

    bindsym Escape mode "default"
    bindsym Return mode "default"
}

