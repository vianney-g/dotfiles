bindsym $hyper+p move up
bindsym $hyper+e move right

# move focused container to workspace
bindsym $meh+u move container to workspace prev workspace prev
bindsym $meh+i move container to workspace prev workspace prev
bindsym $meh+p move container to workspace next workspace next
bindsym $meh+e move container to workspace next workspace next
bindsym $meh+f move container to workspace $Web workspace $Web
bindsym $meh+c move container to workspace $Code workspace $Code
bindsym $meh+g move container to workspace $Game workspace $Game
bindsym $meh+x move container to workspace $Private workspace $Private
bindsym $meh+s move container to workspace $Social workspace $Social
bindsym $meh+m move container to workspace $Music workspace $Music

# move focused window to scratchpad
